<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TriangleView">
        <attr name="triangleColor" format="color"/>
        <attr name="triangleStrokeColor" format="color"/>
        <attr name="triangleDirection" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="triangleStrokeWidth" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="NetworkStateLayout">
        <attr name="nsl_loading" format="reference"/>
        <attr name="nsl_error" format="reference"/>
        <attr name="nsl_empty" format="reference"/>
    </declare-styleable>
</resources>